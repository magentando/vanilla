<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="10" translate="label">

            <group id="installments" showInDefault="1" showInStore="0" showInWebsite="0" sortOrder="900" translate="label">
                <label>Installments</label>

                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="min_amount" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Min amount</label>
                </field>

                <field id="max_installments" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max installments</label>
                </field>
            </group>
        </section>
    </system>
</config>
